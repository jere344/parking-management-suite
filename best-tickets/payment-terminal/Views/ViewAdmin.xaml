<Page x:Class="paymentterminal.Views.ViewAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:paymentterminal.Views"
      xmlns:viewmodel="clr-namespace:paymentterminal.ViewModels"
      xmlns:behaviors="clr-namespace:paymentterminal.Behaviors"
      d:DataContext="{d:DesignInstance Type=viewmodel:VMAdmin}"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Style="{StaticResource {x:Type Page}}">

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Margin="0,0,0,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0"
                             Grid.Column="0"
                             Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal"
                        Margin="15">
                <TextBlock Text="{DynamicResource displayDisabled}"
                           Margin="0,5,10,0"/>
                <CheckBox IsChecked="{Binding DisplayDisabled, Mode=TwoWay}"></CheckBox>
            </StackPanel>
        </materialDesign:Card>

        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,15,0,0"
                 Width="330"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Filter by name"
                 AcceptsReturn="False"
                 Style="{StaticResource MaterialDesignFilledTextBox}"
                 TextWrapping="Wrap"
                 Text="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <materialDesign:Card Grid.Row="2"
                             Grid.Column="0"
                             Margin="0,15,0,0">
            <StackPanel Orientation="Vertical">
                <ListView ItemsSource="{Binding FilteredUsers}"
                          SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                          Padding="0"
                          Margin="0"
                          VerticalAlignment="Stretch">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDisabled}"
                                                                    Value="True">
                                                            <Setter Property="Opacity"
                                                                    Value="0.3"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Image Source="{Binding ProfilePicture}"
                                                Width="40"
                                                Height="40"
                                                Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding FullName}"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button
                    Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryLightButton}"
                    Grid.Row="2"
                    Grid.Column="1"
                    Command="{Binding AddAccountCommand}"
                    Cursor="Hand"
                    Width="25"
                    Height="25"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,16,16">
                    <materialDesign:PackIcon Kind="AccountPlus" />
                </Button>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1"
                             Grid.RowSpan="2"
                             Grid.Column="1"
                             Margin="15, 15, 0, 0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Edit Account"/>

                <TextBox
                    Grid.Row="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource firstName}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding SelectedUser.FirstName}"/>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource lastName}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding SelectedUser.LastName}"/>

                <TextBox
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource email}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding SelectedUser.Email}"/>

                <TextBox
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource phone}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding SelectedUser.Phone}"/>

                <!-- accountCreationDate -->
                <TextBlock
                    Grid.Row="4"
                    Grid.ColumnSpan="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    Text="{DynamicResource accountCreationDate}"/>
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedUser.AccountCreationDate}"/>

                <!-- AccountDisableDate -->
                <TextBlock
                    Grid.Row="5"
                    Grid.ColumnSpan="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    Text="{DynamicResource accountDisableDate}"/>
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="0,15,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding SelectedUser.AccountDisableDate}"/>


                <StackPanel
                    Grid.Row="6"
                    Orientation="Horizontal"
                    Margin="0,15,0,0">
                    <TextBlock Text="{DynamicResource isDisabled}"></TextBlock>
                    <CheckBox Margin="5,0,0,0"
                              IsChecked="{Binding SelectedUser.IsDisabled, Mode=TwoWay}"></CheckBox>
                </StackPanel>
                <Button
                    Grid.Row="6"
                    Grid.Column="1"
                    Command="{Binding DeleteImageCommand}"
                    Cursor="Hand"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="2"
                    Margin="0,15,0,0"
                    Height="Auto">
                    <TextBlock Text="{DynamicResource deleteImage}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </Button>

                
                <Button
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="0,15,0,0"
                    Command="{Binding SaveCommand}"
                    Content="{DynamicResource saveBtn}"
                    Cursor="Hand"
                    Width="150"/>
            </Grid>
        </materialDesign:Card>
    
    </Grid>
</Page>