<Page x:Class="GatesSoftware.Views.ExitGate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:GatesSoftware.ViewModels">
  <Grid Margin="16">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
      <TextBlock Text="Exit Gate" 
                 FontSize="24" 
                 FontWeight="Bold" 
                 HorizontalAlignment="Center" />
      <TextBox Text="{Binding TicketId, UpdateSourceTrigger=PropertyChanged}" 
               materialDesign:HintAssist.Hint="Ticket ID" 
               Width="200" 
               HorizontalAlignment="Center" />
      <Button Content="Validate" 
              Command="{Binding ValidateTicketCommand}" 
              Style="{StaticResource MaterialDesignRaisedButton}" />
      <Button Content="Scan Ticket" 
              Command="{Binding ScanTicketCommand}" 
              Style="{StaticResource MaterialDesignOutlinedButton}" />
    </StackPanel>
  </Grid>
</Page>
