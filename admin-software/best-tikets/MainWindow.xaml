<Window x:Class="wisecorp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wisecorp"
        xmlns:viewmodel="clr-namespace:wisecorp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <materialDesign:DrawerHost x:Name="DrawerHost"
                               BorderBrush="{DynamicResource MaterialDesignDivider}"
                               BorderThickness="0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch">

        <materialDesign:DrawerHost.Style>
            <Style TargetType="materialDesign:DrawerHost"
                   BasedOn="{StaticResource {x:Type materialDesign:DrawerHost}}">
            </Style>
        </materialDesign:DrawerHost.Style>

        <materialDesign:DrawerHost.LeftDrawerContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- close cross -->
                <Button Grid.Row="0" Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        HorizontalAlignment="Right"
                        Margin="0,16,16,0">
                    <materialDesign:PackIcon Kind="Close"
                                             Foreground="{DynamicResource MaterialDesignPaper}"
                                             Width="22"
                                             Height="22"/>
                </Button>
                <TextBlock Grid.Row="1" Text="{DynamicResource entreprise}"
                           Foreground="{DynamicResource MaterialDesign.Brush.Primary.Light}"
                           FontSize="14"
                           Margin="16,0,16,0"/>
                <DockPanel Grid.Row="2" >
                    <ListView x:Name="LeftDrawerStackPanel" Margin="16">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </DockPanel>
            </Grid>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <Grid x:Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <!-- top bar -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Background="{DynamicResource MaterialDesignPaper}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <!-- blank space -->
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}">
                    <materialDesign:PackIcon Kind="Menu"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="20"
                                             Height="20"/>
                </Button>

                <Button Grid.Column="1"
                        Click="Back_Btn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        x:Name="btnBack"
                        IsEnabled="False">
                    <materialDesign:PackIcon Kind="ArrowLeft"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="20"
                                             Height="20"/>
                </Button>

                <Button Grid.Column="2"
                        Click="Next_Btn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        x:Name="btnNext"
                        IsEnabled="False">
                    <materialDesign:PackIcon Kind="ArrowRight"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="20"
                                             Height="20"/>
                </Button>

                <Button Grid.Column="3"
                        Click="Home_Btn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        x:Name="btnHome">
                    <materialDesign:PackIcon Kind="Home"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="20"
                                             Height="20"/>
                </Button>

                <TextBlock Grid.Column="4"
                           Text="WiseCorp"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           FontSize="20"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           ToolTip="Click to open the GitHub repository"
                           MouseLeftButtonDown="OpenGitHub"/>

                <!-- space -->
                <TextBlock Grid.Column="5" Text="{DynamicResource entrepriseSentence}" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
                           FontSize="12"
                           Margin="7,20,0,0"/>

                <Button Grid.Column="6"
                        Click="Open_Settings"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        x:Name="btnSettings"
                        HorizontalAlignment="Right">
                    <materialDesign:PackIcon Kind="CogOutline"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="20"
                                             Height="20"/>
                </Button>

                <Button Grid.Column="7"
                        Click="Test"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        x:Name="btnSettingssss"
                        HorizontalAlignment="Right"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,5,0" Foreground="{DynamicResource MaterialDesignBody}" Text="{DynamicResource profile}"/>
                        <materialDesign:PackIcon Kind="Account"
                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                   Width="20"
                                                   Height="20"/>
                    </StackPanel>
                </Button>




                <Button
                    Grid.Column="8" 
                    Click="Logout" 
                    Background="Transparent" 
                    BorderBrush="Transparent"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    x:Name="logout" 
                    HorizontalAlignment="Right" 
                    Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,5,0" Foreground="{DynamicResource MaterialDesignBody}" Text="{DynamicResource logout}"/>
                        <materialDesign:PackIcon Kind="Logout"
                                                   Foreground="{DynamicResource MaterialDesignBody}"
                                                   Width="20"
                                                   Height="20"/>
                    </StackPanel>
                </Button>




            </Grid>
        
        <Frame Grid.Row="1" x:Name="MainNavigationFrame" />
    </Grid>
    </materialDesign:DrawerHost>
</Window>
